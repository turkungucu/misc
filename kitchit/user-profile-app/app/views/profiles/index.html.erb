<div class="page-header">
  <%= link_to new_profile_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Profile
  <% end %>
  <h1>Listing profiles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Tagline</th>
        <th>Avatar</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @profiles) do |profile| %>
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td><%= profile.tagline %></td>
        <td><%= image_tag avatar_path(profile.avatar_id) if profile.avatar_id %></td>
        <td><%= link_to 'Show', profile %></td>
      	<td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      <% end %>
    </tbody>
  </table>
</div>
