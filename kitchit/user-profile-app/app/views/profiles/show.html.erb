<div class="page-header">
  <%= link_to profiles_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_profile_path(@profile), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @profile.name %></dd>

  <dt>Email:</dt>
  <dd><%= @profile.email %></dd>

  <dt>Tagline:</dt>
  <dd><%= @profile.tagline %></dd>

  <dt>Avatar:</dt>
  <dd><%= image_tag avatar_path(@profile.avatar_id) if @profile.avatar_id %></dd>

</dl>
